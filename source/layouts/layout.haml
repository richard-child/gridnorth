!!!
%html
  %head
    %title= current_page.data.title || "Grid North Design"
    %meta{charset: "utf-8"}/
    %meta{content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{name: "description", :content => current_page.data.description || "Grid North Design provides mobile design services for travel businesses."}/
    %meta{name: "keywords", content: "mobile, design, travel, business, grid, north, richard, child"}/
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}/
    %link{rel: "shortcut icon", href: "/images/favicon.ico"}

    %meta{name: "twitter:title", :content => current_page.data.title || "Grid North Design"}/
    %meta{name: "twitter:description", :content => current_page.data.description || "Grid North Design provides mobile design services for travel businesses."}/
    %meta{name: "twitter:card", content: "summary"}/
    %meta{name: "twitter:image", content: "https://www.gridnorthdesign.com/images/twitter-image.png"}/
    %meta{name: "twitter:site", content: "@thisincludes"}/
    %meta{name: "twitter:creator", content: "@thisincludes"}/

    %meta{property: "og:title", :content => current_page.data.title || "Grid North Design"}/
    %meta{property: "og:description", :content => current_page.data.description || "Grid North Design provides mobile design services for travel businesses."}/
    %meta{property: "og:site_name", content: "Grid North Design"}/
    %meta{property: "og:url", content: "https://www.gridnorthdesign.com"}/
    %meta{property: "og:type", :content => current_page.data.type || "Website"}/
    %meta{property: "og:image", content: "https://www.gridnorthdesign.com/images/og-image.jpg"}/

    = stylesheet_link_tag "main"
    = javascript_include_tag "main"
    = partial("/partials/javascripts/head")

  %body{class: page_classes}
    .page-wrapper
      = partial("/partials/header")
      = yield
      .page-pusher
    = partial("/partials/footer")
