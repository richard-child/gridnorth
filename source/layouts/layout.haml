!!!
%html
  %head
    %title= current_page.data.title || "Web &amp; Mobile Design for Small-Medium Sized Businesses &mdash; Grid North Design"
    %meta{charset: "utf-8"}/
    %meta{content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{content: "Grid North Design provides web &amp; mobile design services for small-medium sized businesses.", name: "description"}/
    %meta{content: "web, website, mobile, design, richard, child, grid, north, gridnorthdesign", name: "keywords"}/
    %meta{content: "width=device-width, initial-scale=1.0, user-scalable=no", name: "viewport"}/
    %link{rel: "shortcut icon", href: "/images/favicon.ico"}
    %link{rel: "stylesheet", href: "https://fonts.googleapis.com/css?family=Roboto:300,300italic,400,400italic,700,900", type: "text/css"}
    %link{rel: "stylesheet", href: "https://fonts.googleapis.com/css?family=Permanent+Marker", type: "text/css"}

    = stylesheet_link_tag "main"
    = javascript_include_tag "main"
    = partial("/partials/javascripts/head")

  %body{class: page_classes}
    = partial("/partials/header")
    = yield
    - unless ["website-design/index.html", "app-design/index.html", "404/index.html", "404/reveal/index.html"].include?(current_path)
      = partial("/partials/client-logos")
    - unless ["website-design/index.html", "app-design/index.html", "404/index.html", "404/reveal/index.html"].include?(current_path)
      = partial("/partials/footer")
