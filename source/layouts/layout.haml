!!!
%html
  %head
    %title= current_page.data.title || "Grid North Design &mdash; Web &amp; Mobile Design for small-mid sized businesses"
    %meta{charset: "utf-8"}/
    %meta{content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{content: "Grid North Design provides web &amp; mobile design services for small-mid sized businesses.", name: "description"}/
    %meta{content: "web, website, mobile, design, richard, child, grid, north, gridnorthdesign", name: "keywords"}/
    %meta{content: "width=device-width, initial-scale=1.0, user-scalable=no", name: "viewport"}/
    %link{rel: "shortcut icon", href: "/images/favicon.ico"}
    %link{rel: "stylesheet", href: "http://fonts.googleapis.com/css?family=Roboto:300,400,400italic,500,700,900", type: "text/css"}

    = stylesheet_link_tag "main"
    = partial("/partials/javascripts/head")

  %body{class: page_classes}
    = partial("/partials/header")
    = yield
    - unless ["404/index.html"].include?(current_path)
      = partial("/partials/footer")

    = javascript_include_tag "main"
