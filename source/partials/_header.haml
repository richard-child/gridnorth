%header.c-header
  .container
    %a.c-header__logo{href: "/"}
      %img#header_logo{src: "/images/header/logo-4.png", alt: "Grid North Design"}/
      :javascript
        var logo = $("img#header_logo"),
          logos = ["/images/header/logo-1.png", "/images/header/logo-2.png", "/images/header/logo-3.png", "/images/header/logo-4.png"],
          newLogo = logos[Math.floor(Math.random() * logos.length)];
        logo.attr('src', newLogo);

    .c-header__menu-btn
      Menu
      %img{src: "/images/header/menu.png", alt: "Menu"}/
    %nav.c-header__nav
      %ul
        %li
          %a{href: "/case-studies", class: page_classes.include?("case-studies") ? "selected" : ""}
            Case Studies
        %li
          %a{href: "/about", class: page_classes.include?("about") ? "selected" : ""}
            About
        %li
          %a{href: "/website-design", class: page_classes.include?("website-design") ? "selected" : ""}
            Website Design
        %li
          %a{href: "/app-design", class: page_classes.include?("app-design") ? "selected" : ""}
            App Design
        %li
          %a{href: "#"}
            Contact
