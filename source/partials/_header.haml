%header.c-header
  .container
    %a.c-header__logo{href: "/"}
      %img#header_logo{src: "/images/header/logo-4.png", alt: "Grid North Design", data: {"no-retina" => true}}/
      :javascript
        var logo = $("img#header_logo"),
          logos = ["/images/header/logo-1.png", "/images/header/logo-2.png", "/images/header/logo-3.png", "/images/header/logo-4.png"],
          newLogo = logos[Math.floor(Math.random() * logos.length)];
        logo.attr("src", newLogo);

    .c-header__menu-btn
      Menu
      %img{src: "/images/header/menu.png", data: {at2x: "http://www.gridnorthdesign.com/images/header/menu@2x.png"}}/
    %nav.c-header__nav
      %ul
        %li
          %a{href: "/case-studies", class: page_classes.include?("case-studies") ? "selected" : ""}
            Case Studies
        %li
          %a{href: "/about", class: page_classes.include?("about") ? "selected" : ""}
            About
        %li
          %a{href: "/newsletter", class: page_classes.include?("newsletter") ? "selected" : ""}
            Newsletter
