%header.c-header
  .container
    .c-header__gradient
    %a.c-header__logo{href: "/"}
      %img#header-logo{src: "/images/header/logo-4.svg", alt: "Grid North Design"}/
      :javascript
        var logo = $("img#header-logo"),
          logos = ["/images/header/logo-1.svg", "/images/header/logo-2.svg", "/images/header/logo-3.svg", "/images/header/logo-4.svg"],
          newLogo = logos[Math.floor(Math.random() * logos.length)];
        logo.attr("src", newLogo);

    %nav.c-header__navigation
      %ul
        %li
          %a{href: "/", class: page_classes.include?("index") ? "selected" : ""}
            Home
        %li
          %a{href: "/projects", class: page_classes.include?("projects") ? "selected" : ""}
            Projects
        %li
          %a{href: "/articles", class: page_classes.include?("articles") ? "selected" : ""}
            Articles
        %li
          %a{href: "/about", class: page_classes.include?("about") ? "selected" : ""}
            About
        %li
          %a{href: "#", class: page_classes.include?("contact") ? "selected" : ""}
            Contact
